@model List<Product>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="@Url.Content("~/uploads/" + product.ImageData)" alt="@product.Title" style="width:150px; height:140px;">
                <div class="card-body">
                    <h4 class="card-title">@product.Title</h4>
                    <h5>Price: $@product.Price</h5>
                    <p class="card-text">Available Stock: @product.Stock</p>
                    <p class="card-text">@Html.Raw(product.Description)</p>
                </div>
                <div class="card-footer">
                    <div class="input-group mb-3">
                        <input type="number" class="form-control quantity-input" min="1" max="@product.Stock" value="1">
                        <div class="input-group-append">
                            <button class="btn btn-primary add-to-cart" data-product-id="@product.Id">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
